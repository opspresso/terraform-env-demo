{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "kms:Decrypt",
        "kms:DescribeKey",
        "kms:Encrypt",
        "ssm:GetParameter",
        "ssm:GetParameterHistory",
        "ssm:GetParameters",
        "ssm:GetParametersByPath"
      ],
      "Resource": [
        "arn:aws:ssm:*:*:parameter/test/*",
        "arn:aws:ssm:*:*:parameter/k8s/common/*",
        "arn:aws:ssm:*:*:parameter/k8s/alpha/*",
        "arn:aws:ssm:*:*:parameter/k8s/dev/*"
      ]
    }
  ]
}
